{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ALL",
            "type": "shell",
            "command": "echo 'ok'",
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "echo": true,
                "focus": true,
                "showReuseMessage": false,
                "revealProblems": "onProblem"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Check for updates",
                "Build Board",
                "Build Display",
                "Build WIFI",
                "Build WIFI TFT"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Build Display",
            "dependsOn": [
                "Config Display",
                "BDisplayF"
            ],
            "dependsOrder": "sequence",
            "command": "Chrome",
            "windows": {
                "command": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe"
            },
            "osx": {
                "command": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
            },
            "args": ["../dist/display/sd/build.log.html"]
        },
        {
            "label": "Build WIFI",
            "dependsOn": [
                "BWifiF"
            ],
            "dependsOrder": "sequence",
            "command": "Chrome",
            "windows": {
                "command": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe"
            },
            "osx": {
                "command": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
            },
            "args": ["../dist/wifi/board/build.log.html"]
        },
        {
            "label": "Build WIFI TFT",
            "dependsOn": [
                "BWifiTFTF"
            ],
            "dependsOrder": "sequence",
            "command": "Chrome",
            "windows": {
                "command": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe"
            },
            "osx": {
                "command": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
            },
            "args": ["../dist/wifi/tft/build.log.html"]
        },
        {
            "label": "Build Board",
            "dependsOn": [
                "Config Board",
                "BBoardF",
            ],
            "dependsOrder": "sequence",
            "command": "Chrome",
            "windows": {
                "command": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe"
            },
            "osx": {
                "command": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
            },
            "args": ["../dist/board/sd/build.log.html"]
        },
        {
            "label": "BBoardF",
            "type": "shell",
            "command": "./build_board.sh",
            "group": "none",
            "problemMatcher": [
                "$platformio"
            ],
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "echo": true,
                "focus": true,
                "showReuseMessage": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "BDisplayF",
            "type": "shell",
            "command": "./build_display.sh",
            "group": "none",
            "problemMatcher": [
                "$platformio"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "echo": true,
                "focus": true,
                "showReuseMessage": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "Config Board",
            "type": "npm",
            "script": "board-config",
            "group": "none",
            "dependsOn": "node check",
            "dependsOrder": "sequence",
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "echo": true,
                "focus": true,
                "showReuseMessage": false,
                "revealProblems": "onProblem"
            },
            "problemMatcher": {
                "owner": "external",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "((([A-Za-z]):\\\\(?:[^\\/:*?\\\"<>|\\r\\n]+\\\\)*)?[^\\/\\s\\(:*?\\\"<>|\\r\\n]*)\\((\\d+)\\):\\s.*(fatal|error|warning|hint)\\s(.*):\\s(.*)",
                    "file": 1,
                    "line": 4,
                    "severity": 5,
                    "code": 6,
                    "message": 7
                }
            }
        },
        {
            "label": "Config Display",
            "type": "npm",
            "script": "display-config",
            "group": "none",
            "dependsOn": "node check",
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "echo": true,
                "focus": true,
                "showReuseMessage": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "REINIT ALL",
            "presentation": {
                "clear": true,
                "reveal": "silent",
                "revealProblems": "onProblem",
                "panel": "shared"
            },
            "type": "shell",
            "command": "./faileover_reinit.sh",
            "group": "none"
        },
        {
            "label": "BWifiF",
            "type": "shell",
            "command": "./build_wifi.sh",
            "args": ["board"],
            "problemMatcher": [
                "$platformio"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "focus": true,
                "clear": false,
                "showReuseMessage": false,
                "reveal": "always",
                "revealProblems": "onProblem",
                "panel": "shared"
            }
        },
        {
            "label": "BWifiTFTF",
            "type": "shell",
            "command": "./build_wifi.sh",
            "args": ["tft"],
            "problemMatcher": [
                "$platformio"
            ],
            "group": "none"
        },
        {
            "label": "node check",
            "promptOnClose": false,
            "presentation": {
                "clear": true,
                "reveal": "silent",
                "revealProblems": "onProblem",
                "panel": "shared"
            },
            "command": "./check_init.sh"
        }
    ]
}
